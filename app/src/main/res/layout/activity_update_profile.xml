<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etUpadateName"
        android:hint="Name"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="8dp"
        android:drawableLeft="@drawable/person"
        android:drawablePadding="8dp"
        android:background="@drawable/translate"
        android:fontFamily="@font/alata"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etUpadateMobileNo"
        android:hint="Mobile No"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/phone"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:background="@drawable/translate"
        android:fontFamily="@font/alata"
        android:textStyle="italic"
        android:enabled="false"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        android:inputType="number"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etUpdateEmailid"
        android:hint="Email Id"
        android:drawableLeft="@drawable/emailid"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:background="@drawable/translate"
        android:fontFamily="@font/alata"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        android:inputType="text"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/etUpdateUsername"
        android:hint="Username"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/username"
        android:background="@drawable/translate"
        android:fontFamily="@font/alata"
        android:textStyle="italic"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        android:inputType="text"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/btnUpdatebutton"
        android:text="Upadate profile"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>